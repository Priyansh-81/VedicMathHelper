<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_radial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="top">

        <LinearLayout
            android:id="@+id/heroContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="96dp"
            android:paddingBottom="32dp"
            android:alpha="0"
            android:translationY="-20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vedic Maths"
                    android:fontFamily="@font/samarkan"
                    android:textSize="42sp"
                    android:letterSpacing="0.08"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn mental math the calm way..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp"
                    android:alpha="0.85" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:alpha="0"
            android:translationY="40dp">

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/input_bg"
                android:padding="14dp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/input_bg"
                android:padding="14dp"
                android:layout_marginBottom="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@android:color/white"
                android:padding="14dp"
                app:backgroundTint="@color/saffron"
                app:cornerRadius="16dp"
                app:elevation="0dp"
                app:rippleColor="#20FFFFFF" />

            <TextView
                android:id="@+id/registerLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New here? Sign Up"
                android:textColor="@color/saffron"
                android:gravity="center"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/babaContainer"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="-100dp"
        android:layout_marginBottom="-10dp">

        <ImageView
            android:id="@+id/babaView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baba_peek"
            android:contentDescription="Baba"
            android:alpha="1" />

    </FrameLayout>

</FrameLayout>