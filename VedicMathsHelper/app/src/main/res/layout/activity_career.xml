<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/careerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_radial"
    android:fitsSystemWindows="true"
    android:clipChildren="false"
    android:clipToPadding="false">

    <View
        android:id="@+id/sunRays"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sun_rays_overlay"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialContainer"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:translationY="-120dp"
        android:translationX="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/dialCenter"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra1"
            style="@style/SutraBubble"
            android:text="1"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="0"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra2"
            style="@style/SutraBubble"
            android:text="2"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="22.5"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra3"
            style="@style/SutraBubble"
            android:text="3"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="45"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra4"
            style="@style/SutraBubble"
            android:text="4"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="67.5"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra5"
            style="@style/SutraBubble"
            android:text="5"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="90"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra6"
            style="@style/SutraBubble"
            android:text="6"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="112.5"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra7"
            style="@style/SutraBubble"
            android:text="7"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="135"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra8"
            style="@style/SutraBubble"
            android:text="8"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="157.5"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra9"
            style="@style/SutraBubble"
            android:text="9"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="180"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra10"
            style="@style/SutraBubble"
            android:text="10"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="202.5"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra11"
            style="@style/SutraBubble"
            android:text="11"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="225"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra12"
            style="@style/SutraBubble"
            android:text="12"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="247.5"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra13"
            style="@style/SutraBubble"
            android:text="13"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="270"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra14"
            style="@style/SutraBubble"
            android:text="14"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="292.5"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra15"
            style="@style/SutraBubble"
            android:text="15"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="315"
            tools:ignore="MissingConstraints"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sutra16"
            style="@style/SutraBubble"
            android:text="16"
            app:layout_constraintCircle="@id/dialCenter"
            app:layout_constraintCircleRadius="260dp"
            app:layout_constraintCircleAngle="337.5"
            tools:ignore="MissingConstraints"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/sutraInfoContainer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="-140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/startBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/teaching_baba"
            android:layout_width="2400dp"
            android:layout_height="240dp"
            android:src="@drawable/teaching_baba"
            />

        <TextView
            android:id="@+id/sutraTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sutra 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/text_primary"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sutraDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startBtn"
        style="@style/AccentButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Start Sutra"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

